<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_marginTop="5dp"
    android:elevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <ImageView
            android:id="@+id/customer_product_itemimage_imgview"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="250dp"
            android:src="@drawable/bg_login" />


        <TextView
            android:id="@+id/customer_product_itemname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Name "
            android:textColor="#000"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/customer_product_itemprice_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="$ 16 "
            android:textColor="#a9a1a1"
            android:textSize="20sp" />


        <ImageButton
            android:id="@+id/customer_product_fav_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_marginStart="20dp"
            android:background="#fdfdfe"
            android:padding="5dp"
            android:src="@drawable/ic_favourite" />


    </LinearLayout>

</android.support.v7.widget.CardView>